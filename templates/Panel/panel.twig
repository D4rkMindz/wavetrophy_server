{% extends "layout.twig" %}

{# Assets #}
{% block assets %}
    {{ assets({files: ['User/login.js']}) }}
{% endblock %}

{# Content #}
{% block content %}
    <div class="container">
        <h1>{{ __('Panel') }}</h1>
        <div class="card col-xs-12">
            <h3>WAVE Trophies</h3>
            <div class="col-sm-6">
                <h4>{{ __('Manage') }}</h4>
                <p>{{ __('Manage all WAVE Trophies here. You can add a new trophy or manage an existent one.') }}</p>
                <a href="{{ path_for('get.trophies.create', { 'language': language }) }}">
                    <button class="btn btn-primary">{{ __('Create Trophy') }}</button>
                </a>
            </div>
            <div class="col-sm-6">
                <div class="list-group">
                    {% for trophy in trophies %}
                        <a href="{{ trophy.url }}" class="list-group-item">
                            <h4>{{ trophy.name }}
                                <small>{{ trophy.country }}</small>
                            </h4>
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="card col-xs-12">
            <h3>App Users</h3>
            <div class="col-sm-6">
                <h4>{{ __('Manage') }}</h4>
                <p>{{ __('Manage all Users here. You can add a new user or manage an existent one.') }}</p>
                <a href="{{ path_for('get.users.create', { 'language': language }) }}"
                   class="btn btn-primary">
                    {{ __('Create User') }}
                </a>
            </div>
        </div>
    </div>
{% endblock %}