{% extends "layout.twig" %}

{# Assets #}
{% block assets %}
    {{ assets({files: ['User/login.js', 'User/login.css']}) }}
{% endblock %}

{# Content #}
{% block content %}
    <div class="col-sm-3 col-sm-offset-3">
        <h1>{{ __('Login') }}</h1>
        <form>
            <div class="form-group">
                <div data-id="main"></div>
                <p class="error"></p>
            </div>
            <div class="form-group">
                <label class="control-label" for="username">{{ __('Username or Email') }}</label>
                <input type="email" class="form-control" data-id="username" id="username"
                       placeholder="john.doe@gmail.com">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" data-id="password"
                       placeholder="{{ __('Your Password') }}">
            </div>
            <button type="submit"
                    class="btn btn-primary   col-sm-12 col-xs-12 col-md-offset-3 col-md-6"
                    data-id="login">{{ __('Login') }}</button>
        </form>
    </div>
{% endblock %}